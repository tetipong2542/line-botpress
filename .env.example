# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# Database
# DATABASE_URL is auto-configured in config.py based on environment:
# - Railway: uses /data/finance.db (persistent storage)
# - Local dev: uses instance/finance.db (created automatically)
# - Fallback: uses /tmp/finance.db
#
# Only set DATABASE_URL if you want to use a specific database:
# DATABASE_URL=sqlite:////absolute/path/to/database.db  (note: 4 slashes for absolute path)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
# DATABASE_URL=mysql://user:pass@host:3306/dbname
#
# Or set custom data directory:
# DATA_DIR=/custom/path

# LINE Login (OAuth2)
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_REDIRECT_URI=http://localhost:5000/auth/line/callback

# LINE Messaging API
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-messaging-channel-secret

# Botpress Integration
BOTPRESS_WEBHOOK_URL=https://webhook.botpress.cloud/68043144-896b-4278-b4d3-66693df66942
BOTPRESS_BOT_ID=botpress-prod
BOTPRESS_BOT_SECRET=your-bot-secret-for-hmac

# Security
BOT_HMAC_SECRET=your-hmac-secret-minimum-32-chars
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# App Settings
APP_NAME=จดรายรับรายจ่าย
APP_TIMEZONE=Asia/Bangkok
DEFAULT_CURRENCY=THB

# Insight Policy (Botpress Mode B)
INSIGHT_MAX_RECORDS=100
INSIGHT_MAX_DAYS=30
INSIGHT_FIELDS_LEVEL=minimal
